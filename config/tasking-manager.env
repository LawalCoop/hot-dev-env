# Tasking Manager - hot-dev-env configuration
# These values are preconfigured for the HOTOSM development environment

# Application URLs
TM_APP_BASE_URL=https://tm.hotosm.test
TM_APP_API_URL=https://tm.hotosm.test/api
TM_APP_API_VERSION=v2

# Database (matches tm-db service in docker-compose)
POSTGRES_DB=tasking-manager
POSTGRES_USER=tm
POSTGRES_PASSWORD=tm
POSTGRES_ENDPOINT=tm-db
POSTGRES_PORT=5432
POSTGRES_TEST_DB=taskingmanagertest
DB_MIN_CONNECTIONS=4
DB_MAX_CONNECTIONS=8

# OSM OAuth2 credentials (update with your own)
TM_CLIENT_ID=${TM_CLIENT_ID:-your-osm-oauth2-client-id}
TM_CLIENT_SECRET=${TM_CLIENT_SECRET:-your-osm-oauth2-client-secret}
TM_REDIRECT_URI=https://tm.hotosm.test/authorized
TM_SCOPE=read_prefs write_api
OAUTHLIB_INSECURE_TRANSPORT=1

# Secret for frontend-backend communication
TM_SECRET=hotosm-dev-tm-secret-change-in-production

# SMTP (uses shared mailhog service)
TM_SMTP_HOST=mailhog
TM_SMTP_PORT=1025
TM_SMTP_USER=test@hotosm.org
TM_SMTP_PASSWORD=unused
TM_SMTP_USE_TLS=0
TM_SMTP_USE_SSL=0
TM_EMAIL_FROM_ADDRESS=noreply@hotosm.org
TM_SEND_PROJECT_EMAIL_UPDATES=0

# Organization
TM_ORG_NAME=Humanitarian OpenStreetMap Team
TM_ORG_CODE=HOT

# Logging & monitoring (dev defaults)
TM_LOG_LEVEL=10
USE_SENTRY=false
PROFILING=False

# OSM server
OSM_SERVER_URL=https://www.openstreetmap.org
OSM_SERVER_API_URL=https://api.openstreetmap.org

# CORS - defaults to ["*"] in dev (no need to set)

# ohsome Stats
OHSOME_STATS_BASE_URL=https://stats.now.ohsome.org
OHSOME_STATS_TOKEN=testSuperSecretTestToken
OHSOME_STATS_TOPICS=highway,waterway,building,poi
